@model ST10296167_PROG7312_POE.Models.Issue

<head>
    <link rel="stylesheet" href="~/css/report-issues.css"/>
</head>

<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show success-message position-fixed"
             style="top: 80px; right: 20px; z-index: 1100; max-width: 400px;">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["RatingError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show error-message position-fixed"
             style="top: 80px; right: 20px; z-index: 1100; max-width: 400px;">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Error!</strong> @TempData["RatingError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Back Button -->
    <a asp-action="Index" asp-controller="Home"
       class="btn btn-secondary position-absolute"
       style="top: 100px; left: 10px; z-index: 1000;">
        &larr; Back
    </a>

    <div class="text-center mt-5">
        <h2>Report Issue</h2>

        <div class="mx-auto" style="max-width: 800px;">
            <hr />

            <div class="form-container">
                <form asp-action="SubmitIssueReport" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <!-- Left Section -->
                        <div class="col-md-6">

                            <!-- Location -->
                            <label class="form-label fw-bold d-block text-start">Location</label>

                            <div class="form-floating mb-3">
                                <input asp-for="Address"
                                       class="form-control @(ViewData.ModelState["Address"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                       placeholder="Road Address" />
                                <label asp-for="Address">Street Address</label>
                                <span asp-validation-for="Address" class="invalid-feedback"></span>
                            </div>
                        
                            <div class="form-floating mb-3">
                                <input asp-for="Suburb"
                                       class="form-control @(ViewData.ModelState["Suburb"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                       placeholder="Suburb" />
                                <label asp-for="Suburb">Suburb</label>
                                <span asp-validation-for="Suburb" class="invalid-feedback"></span>
                            </div>

                            <!-- Category -->
                            <label class="form-label fw-bold d-block text-start">Category</label>
                            <select asp-for="Category"
                                    class="form-select @(ViewData.ModelState["Category"]?.Errors.Count > 0 ? "is-invalid" : "")">
                                <option hidden disabled selected value="">Select Category</option>
                                <option value="Water">Water</option>
                                <option value="Electricity">Electricity</option>
                                <option value="Road Damage">Road Damage</option>
                                <option value="Waste Management">Waste Management</option>
                                <option value="Utilities">Utilities</option>
                                <option value="Environment">Environment</option>
                                <option value="Public Transport">Public Transport</option>
                                <option value="Public Safety">Public Safety</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Category" class="invalid-feedback"></span>
                        </div>

                        <!-- Right Section -->
                        <div class="col-md-6">

                            <!-- Description -->
                            <label class="form-label fw-bold d-block text-start">Description</label>

                            <div class="form-floating mb-3" style="height: 133px;">
                                <textarea asp-for="Description"
                                          class="form-control @(ViewData.ModelState["Description"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                          placeholder="Issue Description" style="height: 100%;"></textarea>
                                <label asp-for="Description">Description</label>
                                <span asp-validation-for="Description" class="invalid-feedback"></span>
                            </div>

                            <!-- Upload Files -->
                            <label for="Files" class="form-label fw-bold d-block text-start">Upload Files</label>

                            <div class="mb-3">
                                <input type="file" id="Files" name="Files" class="form-control" multiple
                                accept=".png,.jpg,.jpeg,.txt,.pdf,.doc,.docx"/>
                                <div class="text-danger">
                                    <span asp-validation-for="Files" class="invalid-feedback"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Submit -->
                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-success w-50" style="height: 45px;">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Rating Modal with Server-Side Form -->
    <div class="modal fade" id="ratingModal" tabindex="-1" aria-labelledby="ratingModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form asp-action="SubmitRating" asp-controller="Report" method="post">
                    @Html.AntiForgeryToken() 
                    <div class="modal-header border-0 pb-0">
                        <h5 class="modal-title mx-auto" id="ratingModalLabel" style="font-weight: bold">
                            Rate Our Service
                        </h5>
                    </div>
                    <div class="modal-body text-center px-4">
                        <p class="mb-4 text-muted">How would you rate your experience submitting this issue?</p>

                        <!-- Star Rating -->
                        <div class="star-rating mb-4">
                            <input type="radio" name="rating" id="star5" value="5">
                            <label for="star5" title="5 stars">★</label>
                            <input type="radio" name="rating" id="star4" value="4">
                            <label for="star4" title="4 stars">★</label>
                            <input type="radio" name="rating" id="star3" value="3">
                            <label for="star3" title="3 stars">★</label>
                            <input type="radio" name="rating" id="star2" value="2">
                            <label for="star2" title="2 stars">★</label>
                            <input type="radio" name="rating" id="star1" value="1">
                            <label for="star1" title="1 star">★</label>
                        </div>

                        <div class="rating-text text-center mb-3">
                            <span id="ratingText" class="fw-bold text-primary"></span>
                        </div>

                        <!-- Optional Feedback -->
                        <div class="mb-3">
                            <label for="feedback" class="form-label text-start d-block">
                                <small>Additional comments (optional):</small>
                            </label>
                            <textarea name="feedback" id="feedback" class="form-control feedback-textarea"
                                      placeholder="Tell us more about your experience..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer border-0 pt-0">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Skip</a>
                        <button type="submit" class="btn btn-primary">Submit Rating</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script src="~/js/report-issues.js"></script>

    <script>
        @if (TempData["ShowRatingModal"] != null)
        {
                <text>
                    setTimeout(() => $('#ratingModal').modal('show'), 740);
                </text>
        }

        // Dismiss success messages
        setTimeout(() => $('.alert-success').alert('close'), 750);
    </script>
}