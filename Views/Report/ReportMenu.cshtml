<body>
    <!-- Feedback Thank You Message -->
    @if (TempData["RatingSuccess"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show success-message position-fixed"
             style="top: 80px; right: 20px; z-index: 1100; max-width: 400px;">
            <strong>Thank You!</strong> @TempData["RatingSuccess"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Back Button -->
    <a asp-action="Index" asp-controller="Home"
       class="btn btn-secondary position-absolute"
       style="top: 100px; left: 10px; z-index: 1000;">
        &larr; Back
    </a>

    <div class="text-center mt-5">
        <h1>Report Issues</h1>
        <h4>Report a new issue or view submitted issues</h4>
        <hr />

        <div class="mt-4 d-flex flex-wrap justify-content-center gap-4">
            <a asp-controller="Report" asp-action="Report" class="btn btn-light text-center shadow rounded p-3" style="width: 200px;">
                <img src="~/images/add.png" alt="Report Issues" style="height: 100px;" class="mb-2 img-fluid" />
                <div class="fw-semibold fs-6 text-dark">Add Issue</div>
            </a>

            <a asp-controller="Report" asp-action="ReportList" class="btn btn-light text-center shadow rounded p-3" style="width: 200px;">
                <img src="~/images/list.png" alt="Events & Announcements" style="height: 100px;" class="mb-2 img-fluid" />
                <div class="fw-semibold fs-6 text-dark">Submitted Issues</div>
            </a>
        </div>
    </div>
</body>

@section Scripts {
<script>
    // Auto-dismiss success message after 3 seconds
    $(document).ready(function () {
        setTimeout(function () {
            $('.success-message').alert('close');
        }, 3000);
    });
</script>
}