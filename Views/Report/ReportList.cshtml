@model Dictionary<int, ST10296167_PROG7312_POE.Models.Issue>

<head>
    <style>
        #logo {
            display: none !important;
        }
    </style>

</head>

<body data-view-file-url="@Url.Action("ViewFile", "Report")"
      data-download-file-url="@Url.Action("DownloadFile", "Report")">

    <!-- Back Button -->
    <a asp-action="ReportMenu" asp-controller="Report"
       class="btn btn-secondary position-absolute"
       style="top: 100px; left: 10px; z-index: 1000;">
        &larr; Back
    </a>

    <!-- Header -->
    <div class="container mt-4" style="max-width: 95%; margin-left: auto; margin-right: auto;">
        <div class="row">
            <div class="col-12">
                <div class="card border-dark mb-4">
                    <div class="card-header bg-dark text-white">
                        <h2 class="mb-0">
                            Submitted Issue Reports
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model == null || !Model.Any())
        {
              <div class="row">
                <div class="col-12">
                    <div class="card border-warning">
                        <div class="card-body text-center py-5">
                            <h4 class="text-muted">No Reports Found</h4>
                            <p class="text-muted">No issues have been reported yet.</p>
                            <a href="@Url.Action("Report", "Report")" class="btn btn-primary">
                                Submit New Report
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var issue in Model.Values.OrderBy(i => i.ID))
                {
                    <div class="col-lg-6 col-xl-4 mb-4">
                        <div class="card h-100 shadow-sm border-0" style="border-radius: 12px;">

                            <!-- Card Header -->
                            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                                <span class="fw-bold">Issue #@issue.ID</span>
                                <span class="badge bg-light text-dark">@issue.Category</span>
                            </div>

                            <div class="card-body">

                                <!-- Location -->
                                <div class="mb-3">
                                    <h6 class="text-muted mb-1">
                                        Location
                                    </h6>
                                    <p class="mb-0 fw-semibold">@issue.Location</p>
                                </div>

                                <!-- Description -->
                                <div class="mb-3">
                                    <h6 class="text-muted mb-1"> 
                                        Description
                                    </h6>
                                    <p class="mb-0">@issue.Description</p>
                                </div>

                                <!-- Progress -->
                                 <div class="mb-3">
                                    <h6 class="text-muted mb-1">
                                        Status
                                    </h6>
                                    <p class="mb-0" style="color: darkorange">Processing</p>
                                </div>

                                <!-- Files Section -->
                                @if (issue.Files != null && issue.Files.Any())
                                {
                                    <div class="mb-0">
                                        <h6 class="text-muted mb-2">
                                            Attached Files (@issue.Files.Count)
                                        </h6>

                                        @foreach (var file in issue.Files)
                                        {
                                            <div class="border rounded p-2 mb-2 bg-light">
                                                <div class="row align-items-center">
                                                    <div class="col-8">
                                                        <div class="d-flex align-items-center">
                                                            <div class="text-truncate">
                                                                <div class="fw-semibold text-truncate" style="font-size: 0.95rem;" title="@file.FileName">
                                                                    @file.FileName
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="col-4 d-flex justify-content-end gap-1">
                                                        @if (file.MimeType.StartsWith("image/"))
                                                        {
                                                            <button class="btn btn-outline-primary btn-sm p-1"
                                                                    onclick="viewImage('@file.ID')"
                                                                    style="min-width: 40px; height: 40px;"
                                                                    title="View Image">
                                                                <img src="~/images/view.png" alt="View" style="height: 24px; width: 24px;" />
                                                            </button>
                                                        }
                                                        <a href="@Url.Action("DownloadFile", new { fileId = file.ID })"
                                                           class="btn btn-outline-success btn-sm p-1"
                                                           style="min-width: 40px; height: 40px;"
                                                           title="Download File">
                                                            <img src="~/images/download.png" alt="Download" style="height: 24px; width: 24px;" />
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center text-muted py-3">
                                        <p class="mb-0">No files attached</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Image Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Image Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="modalImage" src="" class="img-fluid" style="max-height: 70vh;">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a id="downloadImageBtn" href="" class="btn btn-primary">
                        Download
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script src="~/js/report-list.js"></script>
}