@model ST10296167_PROG7312_POE.Models.Event

<head>
    <link rel="stylesheet" href="~/css/add-event.css"/>
</head>

<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show success-message position-fixed"
             style="top: 80px; right: 20px; z-index: 1100; max-width: 400px;">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["EventError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show error-message position-fixed"
             style="top: 80px; right: 20px; z-index: 1100; max-width: 400px;">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Error!</strong> @TempData["EventError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    } 

    <!-- Back Button -->
    <a asp-action="EventsAndAnnouncements" asp-controller="EventsAndAnnouncements"
       class="btn btn-secondary position-absolute"
       style="top: 100px; left: 10px; z-index: 1000;">
        &larr; Back
    </a>

    <div class="text-center mt-5">
        <h2>Add Event</h2>

        <div class="mx-auto" style="max-width: 800px;">
            <hr />

            <div class="form-container">
                <form asp-action="AddEvent" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Title Row -->
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label fw-bold d-block text-start">Title</label>
                            <div class="form-floating mb-3">
                                <input asp-for="Title"
                                       class="form-control @(ViewData.ModelState["Title"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                       placeholder="Event Title" />
                                <label asp-for="Title">Title</label>
                                <span asp-validation-for="Title" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>

                    <!-- 2x2 Grid Row -->
                    <div class="row">
                        <!-- Left Column: Location & Category -->
                        <div class="col-md-6">
                            <!-- Location -->
                            <label class="form-label fw-bold d-block text-start">Location</label>
                            <div class="form-floating mb-3">
                                <input asp-for="Location"
                                       class="form-control @(ViewData.ModelState["Location"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                       placeholder="Event Location" />
                                <label asp-for="Location">Location</label>
                                <span asp-validation-for="Location" class="invalid-feedback"></span>
                            </div>

                            <!-- Category -->
                            <label class="form-label fw-bold d-block text-start mt-3">Category</label>
                            <select asp-for="Category"
                                    class="form-select @(ViewData.ModelState["Category"]?.Errors.Count > 0 ? "is-invalid" : "")">
                                <option hidden disabled selected value="">Select Category</option>
                                <option value="Community">Community</option>
                                <option value="Education">Education</option>
                                <option value="Sports">Sports</option>
                                <option value="Arts">Arts</option>
                                <option value="Environment">Environment</option>
                                <option value="Health">Health</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Category" class="invalid-feedback"></span>
                        </div>

                        <!-- Right Column: Date & Time -->
                        <div class="col-md-6">
                            <!-- Date -->
                            <label class="form-label fw-bold d-block text-start">Date</label>
                            <div class="form-floating mb-3">
                                <input asp-for="Date" type="date"
                                       class="form-control @(ViewData.ModelState["Date"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                       placeholder="Event Date" />
                                <label asp-for="Date">Date</label>
                                <span asp-validation-for="Date" class="invalid-feedback"></span>
                            </div>

                            <!-- Time -->
                            <label class="form-label fw-bold d-block text-start">Time</label>
                            <div class="form-floating mb-3">
                                <input asp-for="Time" type="time"
                                       class="form-control @(ViewData.ModelState["Time"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                       placeholder="Event Time" />
                                <label asp-for="Time">Time</label>
                                <span asp-validation-for="Time" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <label class="form-label fw-bold d-block text-start">Description</label>
                    <div class="form-floating mb-3" style="height: 133px;">
                        <textarea asp-for="Description"
                                  class="form-control @(ViewData.ModelState["Description"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                  placeholder="Event Description" style="height: 100%;"></textarea>
                        <label asp-for="Description">Description</label>
                        <span asp-validation-for="Description" class="invalid-feedback"></span>
                    </div>

                    <!-- Submit -->
                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-success w-50" style="height: 45px;">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script src="~/js/add-event.js"></script>
    <script>
        // Dismiss success messages
        setTimeout(() => $('.alert-success').alert('close'), 750);
    </script>
}