@model ST10296167_PROG7312_POE.Models.EventsAnnouncementsViewModel


<link href="~/css/events-announcements.css" rel="stylesheet" />


<!-- Page Header -->
<header class="events-announcements-header text-center">
    <h1 class="main-heading">Events & Announcements</h1>
    <p class="sub-text">Stay updated with the latest community events and important announcements</p>
</header>

<div class="events-announcements-container">
    <!-- Announcements Section -->
    <div class="announcements-section">
        <div class="announcements-card">
            <div class="announcements-card-header">
                <h3>
                    <i class="fas fa-bullhorn"></i>
                    Recent Announcements
                </h3>
            </div>
            <div class="announcements-card-body">
                @if (Model.Announcements != null && Model.Announcements.Any())
                {
                    <div class="announcements-content" id="announcementsContent">
                        @foreach (var announcement in Model.Announcements.Take(10))
                        {
                            <div class="announcement-card" data-category="@announcement.Category" data-full-content="@announcement.Content">
                                <div class="announcement-header">
                                    <span class="announcement-category">@announcement.Category</span>
                                    <span class="announcement-date">@announcement.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </div>
                                <h5 class="announcement-title">@announcement.Title</h5>
                                <hr class="announcement-separator" />
                                <p class="announcement-content">@announcement.Content</p>
                                <a href="#" class="announcement-read-more">Read Full →</a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state py-3">
                        <i class="fas fa-info-circle"></i>
                        <p class="mb-0">No announcements available at this time.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Events Section -->
    <div class="events-section">
        <div class="events-card">
            <div class="events-card-header">
                <div class="section-divider">
                    <h3 class="section-title">
                        <i class="fas fa-calendar-alt"></i>
                        Upcoming Events
                    </h3>
                    <span class="events-count">@(Model.Events?.Count ?? 0) Events</span>
                </div>
            </div>

            <div class="events-card-body">
                <!-- Filter Section -->
                <div class="filter-section-embedded">
                    <form method="get" id="filterForm" class="filter-form">
                        <div class="filter-group">
                            <label for="category">Category</label>
                            <select class="form-select" id="category" name="category">
                                <option value="">All Categories</option>
                                @foreach (var c in Model.Categories)
                                {
                                    <option value="@c" selected="@(Model.SelectedCategory == c)">@c</option>
                                }
                            </select>
                        </div>

                        <div class="filter-group">
                            <label for="startDate">Start Date</label>
                            <input type="date" class="form-control" id="startDate" name="startDate"
                                   value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "")" />
                        </div>

                        <div class="filter-group">
                            <label for="endDate">End Date</label>
                            <input type="date" class="form-control" id="endDate" name="endDate"
                                   value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "")" />
                        </div>

                        <div class="filter-buttons">
                            <button type="submit" name="search" value="true" class="btn btn-primary">Search</button>
                            <button type="button" class="btn btn-outline-dark" onclick="resetFilters(event)">Reset</button>
                        </div>
                    </form>
                </div>

                <!-- Recommended Events Section -->
                @if (Model.RecommendedEvents != null && Model.RecommendedEvents.Any())
                {
                    <div class="recommended-section-embedded">
                        <div class="section-divider-small">
                            <h4 class="section-title-small">
                                <i class="fas fa-star"></i>
                                Recommended for You
                            </h4>
                        </div>

                        <div class="events-grid recommended-events" id="recommendedEvents">
                            @foreach (var recommendedEvent in Model.RecommendedEvents.Take(3))
                            {
                                <div class="event-card" data-full-description="@recommendedEvent.Description">
                                    <div class="event-card-header">
                                        <h5 class="event-title">@recommendedEvent.Title</h5>
                                        <span class="event-category">@recommendedEvent.Category</span>
                                    </div>
                                    <span class="event-date-badge">@recommendedEvent.Date.ToString("MMMM dd, yyyy") at @recommendedEvent.Time.ToString("HH:mm")</span>
                                    <div class="event-meta">
                                        <div class="event-meta-item">
                                            @recommendedEvent.Location
                                        </div>
                                    </div>
                                    <p class="event-description">
                                        @(recommendedEvent.Description.Length > 120 ? recommendedEvent.Description.Substring(0, 120) + "..." : recommendedEvent.Description)
                                    </p>
                                    <a href="#" class="event-view-link">View Details →</a>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- All Events Grid -->
                <div class="normal-events-section-embedded">
                    <div class="section-divider-small">
                        <h4 class="section-title-small">
                            <i class="fas fa-list"></i>
                            Events
                        </h4>
                    </div>
                    @if (Model.Events != null && Model.Events.Any())
                    {
                        <div class="events-grid" id="allEvents">
                            @foreach (var eventItem in Model.Events)
                            {
                                <div class="event-card" data-full-description="@eventItem.Description">
                                    <div class="event-card-header">
                                        <h5 class="event-title">@eventItem.Title</h5>
                                        <span class="event-category">@eventItem.Category</span>
                                    </div>
                                    <span class="event-date-badge">@eventItem.Date.ToString("MMMM dd, yyyy") at @eventItem.Time.ToString("HH:mm")</span>
                                    <div class="event-meta">
                                        <div class="event-meta-item">
                                            @eventItem.Location
                                        </div>
                                    </div>
                                    <p class="event-description">
                                        @(eventItem.Description.Length > 140 ? eventItem.Description.Substring(0, 140) + "..." : eventItem.Description)
                                    </p>
                                    <a href="#" class="event-view-link">View Details →</a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-calendar-times"></i>
                            <h4>No Events Available</h4>
                            <p>There are no upcoming events at this time. Please check back later!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Event Details Modal -->
<div class="modal fade" id="eventDetailsModal" tabindex="-1" role="dialog" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-header-primary">
                <h5 class="modal-title" id="eventModalLabel">
                    <i class="fas fa-calendar-alt me-2"></i>
                    <span id="eventModalTitle"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="modal-detail-section">
                    <h6 class="modal-label">Category</h6>
                    <p id="eventModalCategory" class="modal-value"></p>
                </div>
                <div class="modal-detail-section">
                    <h6 class="modal-label">Date & Time</h6>
                    <p id="eventModalDate" class="modal-value"></p>
                </div>
                <div class="modal-detail-section">
                    <h6 class="modal-label">Location</h6>
                    <p id="eventModalLocation" class="modal-value"></p>
                </div>
                <div class="modal-detail-section">
                    <h6 class="modal-label">Description</h6>
                    <p id="eventModalDescription" class="modal-value"></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Announcement Details Modal -->
<div class="modal fade" id="announcementDetailsModal" tabindex="-1" role="dialog" aria-labelledby="announcementModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-header-primary">
                <h5 class="modal-title" id="announcementModalLabel">
                    <i class="fas fa-bullhorn me-2"></i>
                    <span id="announcementModalTitle"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="modal-detail-section">
                    <h6 class="modal-label">Category</h6>
                    <p id="announcementModalCategory" class="modal-value"></p>
                </div>
                <div class="modal-detail-section">
                    <h6 class="modal-label">Date</h6>
                    <p id="announcementModalDate" class="modal-value"></p>
                </div>
                <div class="modal-detail-section">
                    <h6 class="modal-label">Content</h6>
                    <p id="announcementModalContent" class="modal-value"></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/events-announcements.js"></script>