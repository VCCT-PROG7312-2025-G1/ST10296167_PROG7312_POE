@model ST10296167_PROG7312_POE.Models.Announcement

<head>
    <link rel="stylesheet" href="~/css/add-announcement.css"/>
</head>

<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show success-message position-fixed"
             style="top: 80px; right: 20px; z-index: 1100; max-width: 400px;">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["AnnouncementError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show error-message position-fixed"
             style="top: 80px; right: 20px; z-index: 1100; max-width: 400px;">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Error!</strong> @TempData["AnnouncementError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Back Button -->
    <a asp-action="EventsAndAnnouncements" asp-controller="EventsAndAnnouncements"
       class="btn btn-secondary position-absolute"
       style="top: 100px; left: 10px; z-index: 1000;">
        &larr; Back
    </a>

    <div class="text-center mt-5">
        <h2>Add Announcement</h2>

        <div class="mx-auto" style="max-width: 600px;">
            <hr />

            <div class="form-container">
                <form asp-action="AddAnnouncement" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Title -->
                    <label class="form-label fw-bold d-block text-start">Title</label>
                    <div class="form-floating mb-3">
                        <input asp-for="Title"
                               class="form-control @(ViewData.ModelState["Title"]?.Errors.Count > 0 ? "is-invalid" : "")"
                               placeholder="Announcement Title" />
                        <label asp-for="Title">Title</label>
                        <span asp-validation-for="Title" class="invalid-feedback"></span>
                    </div>

                    <!-- Category -->
                    <label class="form-label fw-bold d-block text-start">Category</label>
                    <select asp-for="Category"
                            class="form-select mb-3 @(ViewData.ModelState["Category"]?.Errors.Count > 0 ? "is-invalid" : "")"
                            style="height: calc(3.5rem + 2px);">
                        <option hidden disabled selected value="">Select Category</option>
                        <option value="Information">Information</option>
                        <option value="Alert">Alert</option>
                        <option value="Update">Update</option>
                    </select>
                    <span asp-validation-for="Category" class="invalid-feedback"></span>

                    <!-- Content -->
                    <label class="form-label fw-bold d-block text-start">Content</label>
                    <div class="form-floating mb-3" style="height: 133px;">
                        <textarea asp-for="Content"
                                  class="form-control @(ViewData.ModelState["Content"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                  placeholder="Announcement Content" style="height: 100%;"></textarea>
                        <label asp-for="Content">Content</label>
                        <span asp-validation-for="Content" class="invalid-feedback"></span>
                    </div>

                    <!-- Submit -->
                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-success w-50" style="height: 45px;">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script src="~/js/add-announcement.js"></script>
    <script>
        // Dismiss success messages
        setTimeout(() => $('.alert-success').alert('close'), 750);
    </script>
}